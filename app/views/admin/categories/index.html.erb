<h3>Categories</h3>
<%= link_to 'New Category', new_admin_category_path, class: 'btn btn-primary mx-2' %><%= link_to "Back", :back, class: 'btn btn-primary' %>
<hr>
<% @categories.each do |category| %>
    <p class="text-center"><%= category.name %></p>
    <div class="d-flex justify-content-center align-content-center">
    <%= link_to "Edit", edit_admin_category_path(category), class: 'btn btn-primary mx-2' %> <%= button_to "Delete", admin_category_path(category), { onclick: "return confirm('Are you sure you want to delete?')", method: :delete, class: "btn btn-danger" } %>
    </div>
    <hr>
<% end %>