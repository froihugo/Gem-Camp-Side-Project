<h3 class="text-center">Add Category</h3>
    <%= form_with model: @category, url: admin_categories_path, data: { turbo: false } do |form| %>
        <%= form.label :name, class: 'form-label' %><br>
        <%= form.text_field :name, class: 'form-control' %><br>
        <%= form.submit '+Add', class: 'btn btn-primary mx-1' %>
        <%= link_to "Back", :back, class: 'btn btn-primary' %>
    <% end %>