<h1><%= @item.name %></h1>
  <p><%= image_tag "#{@item.image.url}", width: "200", height: "200" %></p>
    <%= button_to 'Delete', admin_item_path, class: 'btn btn-danger', onclick: "return confirm('Are you sure you want to delete?')", method: :delete %>
  <p><strong>Name:</strong> <%= @item.name %></p>
  <p><strong>Quantity:</strong> <%= @item.quantity %></p>
  <p><strong>Minimum Bets:</strong> <%= @item.minimum_bets %></p>
  <p><strong>State:</strong> <%= @item.state %></p>
  <p><strong>Batch:</strong> <%= @item.batch_count %></p>
  <p><strong>Online At:</strong> <%= @item.online_at %></p>
  <p><strong>Offline At:</strong> <%= @item.offline_at %></p>
  <p><strong>Start At:</strong> <%= @item.start_at %></p>
  <p><strong>Status:</strong> <%= @item.status %></p>
  <%= link_to 'Back', :back, class: 'btn btn-dark' %>
  <%= link_to 'Edit', edit_admin_item_path, class: 'btn btn-dark' %>
</section>