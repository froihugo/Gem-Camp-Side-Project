<% if user_signed_in? && @user == current_user %>

<div>
<%= image_tag current_user.avatar.url %>
</div>

<h1><%= current_user.username %></h1>
<h1><%= current_user.email %></h1>
<h1><%= current_user.phone %></h1>

<%= link_to 'Profile', edit_user_registration_path, :class => 'navbar-link nav-item active' %>

<% else %>

<div>
<%= image_tag @user.avatar.url %>
</div>

<h1><%= @user.username %></h1>
<h1><%= @user.email %></h1>
<h1><%= @user.phone %></h1>

<% end %>